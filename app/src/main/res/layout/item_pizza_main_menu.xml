<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/light_purple_card">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="@dimen/value_80_dp"
        android:layout_height="@dimen/value_80_dp"
        android:src="@drawable/image_plug"/>

    <LinearLayout
        android:paddingStart="@dimen/value_16_dp"
        android:paddingTop="@dimen/value_8_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/value_16_sp"
            android:text="@string/plug"/>

        <TextView
            android:id="@+id/pizza_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/value_12_sp"
            android:fontFamily="sans-serif-light"
            android:text="@string/plug"/>

    </LinearLayout>

    <Space
        android:layout_width="@dimen/value_0_dp"
        android:layout_height="@dimen/value_0_dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="@dimen/value_0_dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:paddingEnd="@dimen/value_8_dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plug"
            android:textSize="@dimen/value_16_sp"
            android:textColor="@color/light_very_red"/>

    </LinearLayout>


</LinearLayout>