<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/custom_rectangle_for_filters">

    <ImageView
        android:id="@+id/image_view_in_cards"
        android:layout_width="@dimen/value_80_dp"
        android:layout_height="@dimen/value_80_dp"
        android:src="@drawable/image_pizza_in_cards"
        android:padding="@dimen/value_10_dp"/>

    <TextView
        android:id="@+id/text_view_in_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/value_32_dp"
        android:text="@string/plug"
        android:textSize="@dimen/value_16_sp"
        android:paddingEnd="@dimen/value_32_dp"/>

</LinearLayout>